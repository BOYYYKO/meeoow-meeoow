{{ 'section-categories.css' | asset_url | stylesheet_tag }}

{%- style -%}
a>.category-button {
  background: {{ block.settings.button_background_color }};
}

a>.category-button:hover {
  background: {{ block.settings.button_hover_background_color }};
}
{%- endstyle -%}

<section class="categories">
    <div class="categories-content page-width">
      <h2>{{section.settings.categories-title}}</h2>
      <div class="content">

        {% for block in section.blocks %}
        {% assign isOdd = forloop.index | modulo: 2 %}
        {% if isOdd == 0 %}
          <div class="row" style="margin-bottom: 20px;">

            {% for block in section.blocks limit: 2 offset: row_index%}
            {% assign isOdd = forloop.index | modulo: 2 %}
            {% if isOdd == 0 %}
            <div class="category left">
              <div class="change-photos">
                <div class="photo change"><a href="/"><img src="{{ block.settings.image | img_url: "master"}}" alt=""></a></div>
                <div class="photo change"><a href="/"><img src="{{ block.settings.image-2 | img_url: "master"}}" alt=""></a></div>
              </div>
              <div class="description">
                <a href="/">
                  <h3 style="color: {{ block.settings.title-color }};">
                    {{ block.settings.title }}
                  </h3>
                </a>
                <a href="/">
                  <p style="color: {{ block.settings.text-color }};">
                    {{ block.settings.text }}
                  </p>
                </a>
                <a href="{{ block.settings.button_link }}">
                  <div class="category-button"><p>{{ block.settings.button_text }}</p></div>
                </a>
              </div>
            </div>

            {% else %}

            <div class="category right">
              <div class="change-photos">
                <div class="photo change"><a href="/"><img src="{{ block.settings.image | img_url: "master"}}" alt=""></a></div>
                <div class="photo change"><a href="/"><img src="{{ block.settings.image-2 | img_url: "master"}}" alt=""></a></div>
              </div>
              <div class="description">
                <a href="/">
                  <h3 style="color: {{ block.settings.title-color }};">
                    {{ block.settings.title }}
                  </h3>
                </a>
                <a href="/">
                  <p style="color: {{ block.settings.text-color }};">
                    {{ block.settings.text }}
                  </p>
                </a>
                <a href="{{ section.settings.button_link }}">
                  <div class="category-button"><p>{{ block.settings.button_text }}</p></div>
                </a>
              </div>
            </div>
            {% endif %}
            {% endfor %}

          </div>
          {% assign row_index = forloop.index %}
          {% endif %}

          {% if forloop.index == forloop.length %}
          {% assign isOdd = forloop.index | modulo: 2 %}
          {% if isOdd == 1 %}

          <div class="row">
            <div class="category left">
              <div class="change-photos">
                <div class="photo change"><a href="/"><img src="{{ block.settings.image | img_url: "master"}}" alt=""></a></div>
                <div class="photo change"><a href="/"><img src="{{ block.settings.image-2 | img_url: "master"}}" alt=""></a></div>
              </div>
              <div class="description">
                <a href="/">
                  <h3 style="color: {{ block.settings.title-color }};">
                    {{ block.settings.title }}
                  </h3>
                </a>
                <a href="/">
                  <p style="color: {{ block.settings.text-color }};">
                    {{ block.settings.text }}
                  </p>
                </a>
                <a href="{{ block.settings.button_link }}">
                  <div class="category-button"><p>{{ block.settings.button_text }}</p></div>
                </a>
              </div>
            </div>
          </div>
          {% endif %}
        {% endif %}

        {% endfor %}

      </div>
    </div>
  </section>
  
{% schema %}
{
    "name": "categories",
    "settings": [
    {
        "type": "text",
        "id": "categories-title",
        "label": "Title",
        "default": "Shop By Category"
    }
    ],
    "blocks": [
        {
        "name": "Category",
        "type": "category",
        "settings": [
            {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
            },
            {
              "type": "image_picker",
              "id": "image-2",
              "label": "Second image"
              },
            {
                "type": "text",
                "id": "title",
                "label": "title"
            },
            {
                "type": "color",
                "id": "title-color",
                "label": "Title color",
                "default": "#121212"
            },
            {
                "type": "text",
                "id": "text",
                "label": "text"
            },
            {
                "type": "color",
                "id": "text-color",
                "label": "Text color",
                "default": "#121212"
            },
            {
              "type": "text",
              "id": "button_text",
              "label": "Button text",
              "default": "SHOP NOW"
            },
            {
                "type": "text",
                "id": "button_link",
                "label": "Button link",
                "default": "/"
            },
            {
                "type": "color_background",
                "id": "button_background_color",
                "label": "Button background color",
                "default": "#E9292F"
            },
            {
                "type": "color_background",
                "id": "button_hover_background_color",
                "label": "Button hover background color",
                "default": "#ce3338"
            }
        ]
        }
    ],
    "presets": [
    {
        "category": "categories",
        "name":"categories"
    }
    ]
}
{% endschema %}